-- service
 CREATE TABLE `service` (
   `SERV_NUMBER` int NOT NULL AUTO_INCREMENT,
   `TYPE` varchar(100) NOT NULL,
   `PRICE` decimal(6,2) NOT NULL,
   PRIMARY KEY (`SERV_NUMBER`),
   UNIQUE KEY `TYPE` (`TYPE`),
   UNIQUE KEY `SERV_NUMBER` (`SERV_NUMBER`)
 ) ENGINE=InnoDB DEFAULT CHARSET=utf8 COLLATE=utf8_general_ci;
 -- adress
 CREATE TABLE `address` (
   `ADDRESS_ID` int NOT NULL AUTO_INCREMENT,
   `COUNTRY` varchar(20) NOT NULL,
   `TOWN` varchar(20) NOT NULL,
   `STREET` varchar(30) NOT NULL,
   `NUMBER` varchar(4) NOT NULL,
   PRIMARY KEY (`ADDRESS_ID`)
 ) ENGINE=InnoDB DEFAULT CHARSET=UTF8MB4 COLLATE=utf8mb4_0900_ai_ci;
-- hotel
 CREATE TABLE `hotel` (
   `HOTEL_ID` int NOT NULL AUTO_INCREMENT,
   `HOTEL_NAME` varchar(50) NOT NULL,
   `ADDRESS_ID` int(10) NOT NULL,
   PRIMARY KEY (`HOTEL_ID`),
   UNIQUE KEY `HOTEL_ID` (`HOTEL_ID`),
   CONSTRAINT `hotel_address` FOREIGN KEY (`ADDRESS_ID`) REFERENCES `address` (`ADDRESS_ID`) ON DELETE CASCADE ON UPDATE CASCADE
 ) ENGINE=InnoDB DEFAULT CHARSET=utf8 COLLATE=utf8_general_ci;
-- login
 CREATE TABLE `login` (
   `LOGIN_ID` int NOT NULL AUTO_INCREMENT,
   `PASSWORD` varchar(15) NOT NULL,
   `USERNAME` varchar(15) NOT NULL,
   PRIMARY KEY (`LOGIN_ID`),
   UNIQUE KEY `USERNAME` (`USERNAME`),
   UNIQUE KEY `LOGIN_ID` (`LOGIN_ID`)
 ) ENGINE=InnoDB DEFAULT CHARSET=utf8 COLLATE=utf8_general_ci;
-- client
 CREATE TABLE `client` (
   `CLIENT_NUMBER` int NOT NULL AUTO_INCREMENT,
   `LOGIN_ID` int NOT NULL,
   `FIRST_NAME` varchar(20) NOT NULL,
   `SURNAME` varchar(50) NOT NULL,
   `PHONE_NUMBER` decimal(9,0) NOT NULL,
   PRIMARY KEY (`CLIENT_NUMBER`),
   UNIQUE KEY `CLIENT_NUMBER` (`CLIENT_NUMBER`),
   CONSTRAINT `client_login` FOREIGN KEY (`LOGIN_ID`) REFERENCES `login` (`LOGIN_ID`) ON  DELETE CASCADE ON UPDATE CASCADE
 ) ENGINE=InnoDB DEFAULT CHARSET=utf8 COLLATE=utf8_general_ci;
-- room
 CREATE TABLE `room` (
   `ROOM_ID` int NOT NULL AUTO_INCREMENT,
   `ROOM_NUMBER` int NOT NULL,
   `HOTEL_ID` int NOT NULL,
   `PEOPLE_NUMBER` tinyint(4) NOT NULL DEFAULT '2',
   `PRICE` decimal(6,2) NOT NULL,
   `BALCONY` tinyint(1) NOT NULL,
   `FAMILY` tinyint(1) NOT NULL,
   `PRIVATE_BATHROOM` tinyint(1) NOT NULL,
   `COUPLE_BED` tinyint(1) NOT NULL,
   `VIP` tinyint(1) NOT NULL,
   PRIMARY KEY (`ROOM_ID`),
   UNIQUE KEY `ROOM_ID` (`ROOM_ID`),
   KEY `HOTEL_ID_idx` (`HOTEL_ID`),
   CONSTRAINT `room_hotel` FOREIGN KEY (`HOTEL_ID`) REFERENCES `hotel` (`HOTEL_ID`) ON DELETE CASCADE ON UPDATE CASCADE
 ) ENGINE=InnoDB DEFAULT CHARSET=utf8 COLLATE=utf8_general_ci;
-- reservation
 CREATE TABLE `reservation` (
   `REV_NUMBER` int NOT NULL AUTO_INCREMENT,
   `CLIENT_NUMBER` int NOT NULL,
   `ROOM_ID` int NOT NULL,
   `BEGIN_DATE` date NOT NULL,
   `END_DATE` date NOT NULL,
   `BEGIN_HOUR` time,
   `END_HOUR` time,
   `ENDED` tinyint(1) NOT NULL DEFAULT '0',
   PRIMARY KEY (`REV_NUMBER`),
   UNIQUE KEY `REV-NUMBER` (`REV_NUMBER`),
   KEY `clients_reservation_idx` (`CLIENT_NUMBER`),
   KEY `reservation_room_idx` (`ROOM_ID`),
   CONSTRAINT `reservation_client` FOREIGN KEY (`CLIENT_NUMBER`) REFERENCES `client` (`CLIENT_NUMBER`),
   CONSTRAINT `reservation_room` FOREIGN KEY (`ROOM_ID`) REFERENCES `room` (`ROOM_ID`)
 ) ENGINE=InnoDB DEFAULT CHARSET=utf8 COLLATE=utf8_general_ci;
-- bill
 CREATE TABLE `bill` (
   `BILL_NUMBER` int NOT NULL AUTO_INCREMENT,
   `REV_NUMBER` int NOT NULL,
   `CLIENT_NUMBER` int NOT NULL,
   `ADVANCE` decimal(6,2),
   `ADVANCE_TIME` time,
   `PAYMENT_STATUS` tinyint(1) NOT NULL DEFAULT '0',
   `PRICE` decimal(6,2) NOT NULL,
   PRIMARY KEY (`BILL_NUMBER`),
   UNIQUE KEY `BILL-NUMBER` (`BILL_NUMBER`),
   UNIQUE KEY `REV-NUMBER_UNIQUE` (`REV_NUMBER`),
   KEY `CLIENT-NUMBER_idx` (`CLIENT_NUMBER`),
   CONSTRAINT `bill_client` FOREIGN KEY (`CLIENT_NUMBER`) REFERENCES `client` (`CLIENT_NUMBER`),
   CONSTRAINT `bill_reservation` FOREIGN KEY (`REV_NUMBER`) REFERENCES `reservation` (`REV_NUMBER`)
 ) ENGINE=InnoDB DEFAULT CHARSET=utf8 COLLATE=utf8_general_ci;
-- employee
 CREATE TABLE `employee` (
   `EMPLYEE_NUMBER` int NOT NULL AUTO_INCREMENT,
   `HOTEL_ID` int NOT NULL,
   `LOGIN_ID` int NOT NULL,
   `FIRST_NAME` varchar(20) NOT NULL,
   `SURNAME` varchar(50) NOT NULL,
   `PHONE_NUMBER` decimal(9,0) NOT NULL,
   PRIMARY KEY (`EMPLYEE_NUMBER`),
   UNIQUE KEY `EMPLYEE_NUMBER` (`EMPLYEE_NUMBER`),
   UNIQUE KEY `LOGIN_ID_UNIQUE` (`LOGIN_ID`),
   KEY `HOTEL_ID_idx` (`HOTEL_ID`),
   CONSTRAINT `employee_hotel` FOREIGN KEY (`HOTEL_ID`) REFERENCES `hotel` (`HOTEL_ID`),
   CONSTRAINT `employee_login` FOREIGN KEY (`LOGIN_ID`) REFERENCES `login` (`LOGIN_ID`)
 ) ENGINE=InnoDB DEFAULT CHARSET=utf8 COLLATE=utf8_general_ci;
-- employee_s
 CREATE TABLE `employee_service` (
   `EMPLYEE_NUMBER` int NOT NULL,
   `SERV_NUMBER` int NOT NULL,
   PRIMARY KEY (`EMPLYEE_NUMBER`,`SERV_NUMBER`),
   KEY `employe_srvice_idx` (`SERV_NUMBER`),
   CONSTRAINT `employe_srvice` FOREIGN KEY (`SERV_NUMBER`) REFERENCES `service` (`SERV_NUMBER`),
   CONSTRAINT `service_employe` FOREIGN KEY (`EMPLYEE_NUMBER`) REFERENCES `employee` (`EMPLYEE_NUMBER`)
 ) ENGINE=InnoDB DEFAULT CHARSET=utf8 COLLATE=utf8_general_ci;
-- service_res
 CREATE TABLE `service_reservation` (
   `SERV_NUMBER` int NOT NULL,
   `REV_NUMBER` int NOT NULL,
   PRIMARY KEY (`SERV_NUMBER`,`REV_NUMBER`),
   KEY `service_reservation_idx` (`REV_NUMBER`),
   CONSTRAINT `reservation_service` FOREIGN KEY (`SERV_NUMBER`) REFERENCES `service` (`SERV_NUMBER`),
   CONSTRAINT `service_reservation` FOREIGN KEY (`REV_NUMBER`) REFERENCES `reservation` (`REV_NUMBER`)
 ) ENGINE=InnoDB DEFAULT CHARSET=utf8 COLLATE=utf8_general_ci;
